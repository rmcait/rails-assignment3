<h2>User info</h2>

<%= form_for (@user) do |f| %>
  <%= render "layouts/error_messages", {model: f.object} %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

    <div class="field">
    <%= f.label :profile_image_id %><br />
    <%= f.file_field :profile_image %>
  </div>

    <div class="field">
    <%= f.label :introduction %><br />
    <%= f.text_area :introduction %>
  </div>

  <div class="actions">
    <%= f.submit "Update User" %>
  </div>
<% end %>